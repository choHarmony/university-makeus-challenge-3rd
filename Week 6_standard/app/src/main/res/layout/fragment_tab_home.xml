<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TabHomeFragment"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/black">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/channel_banner"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/reset_button"
                android:scaleType="fitXY"/>

            <ImageView
                android:id="@+id/channel_profile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/channel_profile"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/channel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="안드의 숲"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="구독자 12만명 | 동영상 34개"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UMC INHA Android >"
                android:textColor="#808080"
                android:layout_gravity="center"
                android:textSize="15sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="구독중"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:background="@drawable/round_button"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="업로드한 동영상"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="20dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:id="@+id/school"
                        android:layout_width="180dp"
                        android:layout_height="100dp"
                        android:src="@drawable/school" />

                    <TextView
                        android:id="@+id/schoolTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="동물 친구들 학교 지어주기"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/school"
                        android:textSize="15sp"
                        android:layout_marginStart="10dp" />

                    <TextView
                        android:id="@+id/schoolInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="조회수 1.2만회 | 3주 전"
                        android:textColor="#808080"
                        app:layout_constraintTop_toBottomOf="@+id/schoolTitle"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@+id/school"
                        android:layout_marginStart="10dp" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:id="@+id/peter"
                        android:layout_width="180dp"
                        android:layout_height="100dp"
                        android:src="@drawable/peter" />

                    <TextView
                        android:id="@+id/peterTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="피터"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/peter"
                        android:textSize="15sp"
                        android:layout_marginStart="10dp" />

                    <TextView
                        android:id="@+id/peterInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="조회수 1.2만회 | 3주 전"
                        android:textColor="#808080"
                        app:layout_constraintTop_toBottomOf="@+id/peterTitle"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@+id/peter"
                        android:layout_marginStart="10dp" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:id="@+id/vanila"
                        android:layout_width="180dp"
                        android:layout_height="100dp"
                        android:src="@drawable/vanila_secret" />

                    <TextView
                        android:id="@+id/vanilaTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="바닐라"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/vanila"
                        android:textSize="15sp"
                        android:layout_marginStart="10dp" />

                    <TextView
                        android:id="@+id/vanilaInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="조회수 1.2만회 | 3주 전"
                        android:textColor="#808080"
                        app:layout_constraintTop_toBottomOf="@+id/vanilaTitle"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@+id/vanila"
                        android:layout_marginStart="10dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>