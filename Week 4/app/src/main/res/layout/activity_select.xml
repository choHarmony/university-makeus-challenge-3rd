<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectActivity"
    android:background="@color/black"
    android:layout_gravity="center">

    <ImageButton
        android:id="@+id/btnText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/navi_text_icon"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="70dp"
        android:contentDescription="open memo"
        />

    <TextView
        android:id="@+id/textMemo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Text Memo"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/btnText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="76dp" />

    <ImageButton
        android:id="@+id/btnPaint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:src="@drawable/navi_draw_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="70dp"
        android:contentDescription="open memo"/>

    <TextView
        android:id="@+id/paintMemo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Colorful Memo"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/btnPaint"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="68dp" />


</androidx.constraintlayout.widget.ConstraintLayout>